#!/bin/bash

./configure \
    --prefix=$PHP_HOME \
    --enable-zend-monitor \
    --enable-debug \
    --enable-mbstring \
    --enable-intl \
    --enable-mysqlnd \
    --enable-pdo \
    --enable-exif \
    --with-apxs2=/usr/bin/apxs \
    --with-mysql \
    --with-pdo-mysql \
    --with-openssl \
    --with-xsl \
    --with-curl \
    --with-mcrypt \
    --with-xdiff \
    --with-tidy \
    --with-zlib \
    --with-config-file-path=$PHP_HOME/conf.d \
    --with-config-file-scan-dir=$PHP_HOME/conf.d/ext


